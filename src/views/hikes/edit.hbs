<div class="position-relative"></div>
<div class="position-absolute top-50 start-50 translate-middle w-100" style="margin-top:5%;">
    <main class="form-signin">
        <form id="sign-form" action="/hikes/edit/{{data._id}}" method="post">
            <img class="image-login mb-4 image-login rounded-circle" 
            style="display: block; margin-right: auto; margin-left: auto; margin-top:50%"
                src="/images/logo-basico.png"
                alt="" width="170" height="120">
            <h1 id="create-title" class="h3 mb-3 fw-normal">Editar Hike</h1>
            <div class="mb-2">
  <label for="exampleFormControlTextarea1" class="form-label">Descripción del hike</label>
  <textarea name="description" class="form-control" rows="3">{{data.description}}</textarea>
</div>
<div class="mb-2">
  <label for="exampleFormControlTextarea1" class="form-label">Día y hora</label>
  <textarea name="time" class="form-control" rows="2">{{data.time}}</textarea>
</div>

<div class="mb-2">
  <label for="exampleFormControlTextarea1" class="form-label">Lugar</label>
  <textarea name="location" class="form-control" rows="2">{{data.location}}</textarea>
</div>

<div class="mb-2">
  <label for="exampleFormControlTextarea1" class="form-label">URL de imagen</label>
  <textarea name="imageUrl" class="form-control" rows="2">{{data.imageUrl}}</textarea>
</div>

            <button id="button-login" class="w-100 btn btn-lg btn-warning" type="submit">Editar</button>
            <p class="mt-5 mb-3 text-muted">© 2021</p>

            {{#if msg}}
            <p class="text-red-400"> {{msg}} </p>
            {{/if}}
        </form>
    </main>
</div>