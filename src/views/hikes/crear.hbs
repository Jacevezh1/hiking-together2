
<div style="width:100% ">
  <main class="form-signin">
    <form id="sign-form" action="/hikes/crear" method="post">
      <img class="image-login mb-4 rounded-circle" style="display: block; margin-right: auto; margin-left: auto; margin-top:10%"
        src="/images/logo-basico.png"
        alt="" width="170" height="120">
      <h1 id="create-title" class="h3 mb-3 fw-normal">Crea tu Hike</h1>
      <div class="rounded">
      <div class="badge bg-primary text-wrap w-100 rounded-0" style="padding-top: 4%; padding-bottom: 4%">
        Creador: {{currentUser.name}}
      </div>
      
      <div class="form-floating">
        <input name="description" type="text" class="form-control rounded-0" placeholder="¡Un hike chingón!">
        <label class="label-form" for="description">Descripción del hike</label>
      </div>
      <div class="form-floating">
        <input name="time" type="text" class="form-control rounded-0" placeholder="hora">
        <label class="label-form" for="time">Día y horario</label>
      </div>
      <div class="form-floating">
        <input name="location" type="text" class="form-control rounded-0" placeholder="¿En qué lugar?">
        <label class="label-form" for="location">Lugar</label>
      </div>
      <div class="form-floating">
        <input name="imageUrl" type="text" class="form-control rounded-0" placeholder="URL de tu imagen">
        <label class="label-form" for="imageUrl">URL de tu imagen</label>
      </div>
      <button id="button-login" class="w-100 btn btn-lg bg-warning" type="submit">Crear</button>
      <p class="mt-5 mb-3 text-muted">© 2021</p>
   </div>
      {{#if msg}}
      <p class="text-red-400"> {{msg}} </p>
      {{/if}}
    </form>
  </main>
</div>