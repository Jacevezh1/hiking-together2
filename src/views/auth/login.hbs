<main class="form-signin">
  <img class="image-login mb-4 rounded-circle justify-content-center" style="display: block; margin-right: auto; margin-left: auto;" src="/images/logo-auth.png" alt="" width="170" height="120">
  <form id="sign-form" action="/auth/login" method="post">
    <h1 class="h3 mb-3 fw-normal ">Ingresa con tu cuenta</h1>
    <h6><a href="/auth/signup" class="link-danger">¡O regístrate!</a></h6>
    <div class="form-floating">
      <input name="email" type="email" class="form-control"  placeholder="name@example.com">
      <label  class="label-form" for="email">Email address</label>
    </div>
    <div class="form-floating">
      <input name="password" type="password" class="form-control" placeholder="Password">
      <label class="label-form" for="password">Contraseña</label>
    </div>

    <button id="button-login" class="w-100 btn btn-lg btn-danger" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-muted">© 2021–2021</p>
    {{#if msg}}
    <p class="text-red-400"> {{msg}} </p>
    {{/if}}
  </form>
</main>

